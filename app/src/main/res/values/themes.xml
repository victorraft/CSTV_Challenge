<resources>

    <style name="Theme.FuzeSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_fuze</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.CSTV.NoActionBar</item>
    </style>

    <style name="Theme.CSTV" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_medium</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.CSTV.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>